{{>navbar margin=true}}
{{#if data.sessions}}
	{{#with data.sessions.[0]}}



	<div class="blog">
	  <div class="blog__header">
			{{>artwork img='/img/boquet2-small.png' class="post-art"}}
	    <p class="blog__header__date helvetica">{{{date}}}</p>
	    <h3 class="blog__header__title">{{{toUpperCase name}}}</h3>
	    <p class="blog__header__description">{{{content.extended}}}</p>
	  </div>
	</div>

		<div class="blog">
			  <div class="blog__images">
					{{#each images}}
			    <div class="blog__img blog__img--landscape">
			      <img class="blog__img__border" src={{{cloudinaryUrl this}}} alt="">
			    </div>
					{{/each}}
			  </div>
			</div>

	{{/with}}
{{/if}}

{{>footer}}

<script src="/js/blog.js"></script>
