{{>navbar margin=true}}

<div class="gallery">
      <div
        class="details-container background parallax"
        style="background-image:url('{{{cloudinaryUrl galleries.[0].heroImage}}}'); margin-top: 10px; margin-bottom: 70px; width: 100%;"
        data-img-width="1600"
        data-img-height="1064"
        data-diff="100"
      >
          <div class="content-a category-title">
              <div class="content-b">
                  <h1>{{category}}</h1>
              </div>
          </div>
      </div>

		{{#each galleries}}
      <a class="image" href="/blog/{{{toLowerCase key}}}">
        <figure class="photo-inner">
          <img src="{{{cloudinaryUrl heroImage}}}" alt="">
          <div class="photo-overlay">
            <h3 class="photo-overlay__title">{{{toUpperCase name}}}</h3>
            <p class="photo-overlay__description">{{{toUpperCase content.extended}}}</p>
          </div>
        </figure>
      </a>
    {{/each}}

</div>

<script src="/js/parallax.js"></script>
